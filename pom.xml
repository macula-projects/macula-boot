<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>dev.macula.boot</groupId>
        <artifactId>macula-boot-parent</artifactId>
        <version>${revision}</version>
        <relativePath>macula-boot-parent</relativePath>
    </parent>

    <groupId>dev.macula.boot</groupId>
    <artifactId>macula-boot</artifactId>
    <packaging>pom</packaging>
    <version>${revision}</version>

    <name>macula-boot</name>
    <description>基于Spring Boot、Spring Cloud的微服务开发框架</description>
    <url>https://macula.dev</url>

    <properties>
        <revision>5.0.0-SNAPSHOT</revision>
    </properties>

    <modules>
        <module>macula-boot-parent</module>
        <module>macula-boot-commons</module>
        <module>macula-boot-starters</module>
        <module>macula-boot-examples</module>
        <module>macula-boot-docs</module>
    </modules>

    <licenses>
        <license>
            <name>The Apache License</name>
            <url>https://apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>rainsoft</name>
            <email>rainsoft@163.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:macula-projects/macula-boot.git</connection>
        <developerConnection>scm:git:git@github.com:macula-projects/macula-boot.git</developerConnection>
        <url>https://github.com/macula-projects/macula-boot</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>