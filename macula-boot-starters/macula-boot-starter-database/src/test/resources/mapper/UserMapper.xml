<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.macula.boot.starter.mproot.test.mapper.UserMapper">

    <resultMap id="resultMap" type="org.macula.boot.starter.mproot.test.vo.UserVO">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="email" property="email" />
    </resultMap>

    <select id="listById" resultMap="resultMap">
        select name, email from user where id = #{id}
    </select>

</mapper>